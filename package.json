{
  "name": "metro-pids",
  "version": "1.4.0",
  "description": "Metro-PIDS ",
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/tanzhouxkong/Metro-PIDS-.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:sdk": "node ./scripts/build-display-sdk.js",
    "publish:gh": "electron-builder --publish=always",
    "deploy:gitee": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-to-gitee.ps1 -RepoUrl https://gitee.com/tanzhouxkong/Metro-PIDS-.git -Branch pages"
  },
  "build": {
    "appId": "com.Metro-PIDS.myapp",
    "productName": "Metro-PIDS",
    "nsis": {
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "shortcutName": "Metro-PIDS",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "build/installer.nsh"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "tanzhouxkong",
        "repo": "Metro-PIDS-",
        "releaseType": "release",
        "vPrefixedTagName": true
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist",
      "!node_modules/electron",
      "!node_modules/electron-builder"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publish": [
        {
          "provider": "github",
          "owner": "tanzhouxkong",
          "repo": "Metro-PIDS-",
          "vPrefixedTagName": true
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "publish": [
        {
          "provider": "github",
          "owner": "tanzhouxkong",
          "repo": "Metro-PIDS-",
          "vPrefixedTagName": true
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "publish": [
        {
          "provider": "github",
          "owner": "tanzhouxkong",
          "repo": "Metro-PIDS-",
          "vPrefixedTagName": true
        }
      ]
    }
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3"
  }
}
